{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "target": "es2017",
    "lib": [
      "es2017", "dom"
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./src",
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  }
}